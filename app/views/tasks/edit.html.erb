<h1> Edit task </h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed, {}, true, false %>
  <%= f.submit %>
<% end %>

<p> <%= link_to 'Go back to the tasks list', tasks_path %> </p>
