<h1> Task Manager </h1>

<ul>
  <% @tasks.each do |task| %>
  <li> <% if task.completed == 'true' %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "Delete" ,
    task_path(task.id),
    method: :delete,
    data: { confirm: "Are you sure?" }  %> </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
